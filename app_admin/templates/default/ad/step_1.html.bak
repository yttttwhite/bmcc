      <script>
			var types={SJson::encode($plan_types)};
			$(document).ready(function(){
			
                    if($("#platform1").attr("checked") == "checked"){
                        $("#platdl1").attr("style","display:block");
                        $("#platdl2").attr("style","display:none");
                        $("#sub_cate").find("option:selected").attr("selected",false);
                    }
                    if($("#platform2").attr("checked") == "checked"){
                        $("#platdl2").attr("style","display:block");
                        $("#platdl1").attr("style","display:none");
                        $("#jslx").attr("style","display:block");
                    }
                    $("#platform1").click(function(){
                        $("#platdl1").attr("style","display:block");
                        $("#platdl2").attr("style","display:none");
                        $("#jslx").attr("style","display:none");
                    });
                    $("#platform2").click(function(){
                        $("#platdl2").attr("style","display:block");
                        $("#platdl1").attr("style","display:none");
                        $("#jslx").attr("style","display:block");
                    });
			    $("#cate").change(function(){
			        var t=types[($(this).val())];
			        $("#sub_cate").html();
			        var h="";
			        for(var i in t){
			            {if(!empty($plan->type_id))}
			                if(t[i].type_id == {$plan->type_id}){
			                    h+="<option selected='selected' value='"+t[i].type_id+"'>"+t[i].type_name+"</option>";
			                }else{
			                    h+="<option value='"+t[i].type_id+"'>"+t[i].type_name+"</option>";
			                }
						{else}
							h+="<option value='"+t[i].type_id+"'>"+t[i].type_name+"</option>";
			            {/if}
			        }
			        $("#sub_cate").html(h);
                    console.log(h);
			    });
			var type_id=($("#sub_cate").attr("data"));
			for(var i in types){
			 for(var j in types[i]){
			  if(type_id == types[i][j].type_id && $("#platform2").attr("checked") == "checked"){
			    $("#cate").val(i).trigger("change");
			  }
			 }
			}
            $("#ta_cate").change(function(){
                        $("#sub_cate").find("option:selected").attr("selected",false);
                        $("#ta_cate").find("option:selected").attr("selected",true);                                                 
                        $("#sub_cate").val("");
                    });
			});
        </script>
